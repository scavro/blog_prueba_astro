const { data } = Astro.props
/*console.log (data)*/
---

<style>
    .sticker-container{
        background: #111;
        width: 300px;
        height: 360px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        margin: 1rem 0;
        border: 3px solid gold;
        border-radius: 6px;
    }
    .sticker{
        --size: 180px;

        width: var(--size) ;
        height: var(--size );
        image-rendering: pixelated;
    }
    .category{
        background: darkred;
        color: #fff;
        padding: 8px;
        border-radius: 15px;
        padding: 6px;
    }


</style>

<div class="sticker-container">
    <h2>{data.name}</h2>
    <img class="sticker" src={data.url} alt={data.name}> 
    <span class="category"> {data.category} </span>

</div>
